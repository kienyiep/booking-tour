extends base

block content
  main.main
    .add-Tour-form
      #token(data-token=`${token}`) 
      h2.heading-secondary.ma-bt-lg.tour__heading Create New Tour
      form.form.form-addTour(action='/add-user-data' method='POST' entype='multipart/form-data')
        .form__container
          .form__content
            .form__group
              label.form__label(for='name') Tour Name
              input#tourName.form__input(type='text', placeholder='name',name='tourName' ,required)
            .form__group
              label.form__label(for='price') Price
              input#tourPrice.form__input(type='text', placeholder='price',name='tourPrice'  ,required)
            .form__group
              label.form__label(for='priceDiscount') Price Discount
              input#tourPriceDiscount.form__input(type='text', placeholder='price', name='tourPriceDiscount' ,required)
  
            .form__group.ma-bt-md
              label.form__label(for='duration') Duration
              input#tourDuration.form__input(type='text', placeholder='duration', name='tourDuration' ,required)
            .form__group.ma-bt-md
              label.form__label(for='diffculty') Difficulty
              input#tourDifficulty.form__input(type='text', placeholder='difficluty',name='tourDifficulty' ,required)
            .form__group.ma-bt-md
              label.form__label(for='groupSize') Max Group Size
              input#tourGroupSize.form__input(type='text', placeholder='group size',name='tourGroupSize'  ,required)   
            .form__group.ma-bt-md
              label.form__label(for='startLocation') Start Location
              .form__location
                input#startlat.form__input--coordinate(type='text', placeholder='lat', name='startlat')
                input#startlong.form__input--coordinate(type='text', placeholder='long', name='startlong')
                input#startDescription.form__input--location(type='text', placeholder='description',name='startDescription')
                input#startAddress.form__input--location(type='text', placeholder='day', name='startAddress')
            .form__group.ma-bt-md
              label.form__label(for='description') Descriptions
              input#tourDescriptions.form__input(type='text',name='tourDescriptions', placeholder='description')   
            .form__group.ma-bt-md
              label.form__label(for='summary') Summary
              input#tourSummary.form__input(type='text',name='tourSummary', placeholder='summary')   
           
          .form__content
            .form__group
              label.form__label(for='imageCover') Image Cover
              input.form__upload(type='file',accept='image/*',id='tourImageCover',name='tourImageCover')
              label(for='tourImageCover') choose new photo
            .form__group.ma-bt-md 
              label.form__label(for='images') Images
              input.form__upload(type='file',accept='image/*',id='tourPhoto1',name='tourPhoto1')
              label(for='tourPhoto1') choose new photo
              |    
              input.form__upload(type='file',accept='image/*',id='tourPhoto2',name='tourPhoto2')
              label(for='tourPhoto2') choose new photo
              |    
              input.form__upload(type='file',accept='image/*',id='tourPhoto3',name='tourPhoto3')
              label(for='tourPhoto3') choose new photo
            .form__group
              label.form__label(for='locations') Locations
              .form__location
                input#tourlat.form__input--coordinate(type='text', placeholder='lat', name='tourlat')
                input#tourlong.form__input--coordinate(type='text', placeholder='long', name='tourlong')
                input#tourDescription.form__input--location(type='text', placeholder='description',name='tourDescription')
                input#tourDay.form__input--location(type='text', placeholder='day', name='tourDay')
              .form__location
                input#tourlat2.form__input--coordinate(type='text', placeholder='lat', name='tourlat2')
                input#tourlong2.form__input--coordinate(type='text', placeholder='long', name='tourlong2')
                input#tourDescription2.form__input--location(type='text', placeholder='description',name='tourDescription2')
                input#tourDay2.form__input--location(type='text', placeholder='day', name='tourDay2')
              .form__location
                input#tourlat3.form__input--coordinate(type='text', placeholder='lat', name='tourlat3')
                input#tourlong3.form__input--coordinate(type='text', placeholder='long', name='tourlong3')
                input#tourDescription3.form__input--location(type='text', placeholder='description',name='tourDescription3')
                input#tourDay3.form__input--location(type='text', placeholder='day', name='tourDay3')
            .form__group
              label.form__label(for='startDate') Starting Date
              input#tourDate1.form__input(type='date', placeholder='date',  name='tourDate1')
              <br>
              input#tourDate2.form__input(type='date', placeholder='date',  name='tourDate2')
              <br>
              input#tourDate3.form__input(type='date', placeholder='dates',   name='tourDate3')
              
            .form__group
              label.form__label(for='guides') Guides
              input#tourGuide1.form__input(type='text', placeholder='guide name',  name='tourGuide1')
              <br>
              input#tourGuide2.form__input(type='text', placeholder='guide name',  name='tourGuide2')
              <br>
              input#tourGuide3.form__input(type='text', placeholder='guide name',   name='tourGuide3')
              
        .form__group
          button.btn.btn--green Add new tour