extends base

block content
  main.main
    .update-Tour-form
      if (updateTour)
        #token(data-token=`${token}`) 
        h2.heading-secondary.ma-bt-lg.tour__heading Create New Tour
        form.form.form-addTour(action=`/update-tour-data/${updateTour.id}` method='POST' entype='multipart/form-data')
          .form__container
            .form__content
              .form__group
                label.form__label(for='name') Tour Name
                input#tourName.form__input(type='text', placeholder='name',name='name',required, value=`${updateTour.name}`)
              .form__group
                label.form__label(for='price') Price
                input#tourPrice.form__input(type='text', placeholder='price',name='price'  ,required,value=`${updateTour.price}`)
              .form__group
                label.form__label(for='priceDiscount') Price Discount
                input#tourPriceDiscount.form__input(type='text', placeholder='price', name='priceDiscount' )
    
              .form__group.ma-bt-md
                label.form__label(for='duration') Duration
                input#tourDuration.form__input(type='text', placeholder='duration', name='duration' ,required,value=`${updateTour.duration}`)
              .form__group.ma-bt-md
                label.form__label(for='diffculty') Difficulty
                input#tourDifficulty.form__input(type='text', placeholder='difficluty',name='difficulty' ,required,value=`${updateTour.difficulty}`)
              .form__group.ma-bt-md
                label.form__label(for='groupSize') Max Group Size
                input#tourGroupSize.form__input(type='text', placeholder='group size',name='maxGroupSize' ,required,value=`${updateTour.maxGroupSize}`)   
              .form__group.ma-bt-md
                label.form__label(for='startLocation') Start Location
                .form__location
                  input#startlat.form__input--coordinate(type='text', placeholder='lat', name='startlat',value=`${updateTour.startLocation.coordinates[1]}`)
                  input#startlong.form__input--coordinate(type='text', placeholder='long', name='startlong',value=`${updateTour.startLocation.coordinates[0]}`)
                  input#startDescription.form__input--location(type='text', placeholder='description',name='startDescription',value=`${updateTour.startLocation.description}`)
                  input#startAddress.form__input--location(type='text', placeholder='day', name='startAddress',value=`${updateTour.startLocation.address}`)
              .form__group.ma-bt-md
                label.form__label(for='description') Descriptions
                input#tourDescriptions.form__input(type='text',name='description', placeholder='description',value=`${updateTour.description}`)   
              .form__group.ma-bt-md
                label.form__label(for='summary') Summary
                input#tourSummary.form__input(type='text',name='summary', placeholder='summary',value=`${updateTour.summary}`)   
            
            .form__content
              .form__group
                label.form__label(for='imageCover') Image Cover
                input.form__upload(type='file',accept='image/*',id='tourImageCover',name='imageCover',value=`${updateTour.imageCover}`)
                label(for='tourImageCover') choose new photo
              .form__group.ma-bt-md     
                label.form__label(for='images') Images
                input.form__upload(type='file',accept='image/*',id='tourPhoto1',name='images1',value=`${updateTour.images[0]}`)
                label(for='tourPhoto1') choose new photo
                |    
                input.form__upload(type='file',accept='image/*',id='tourPhoto2',name='images2',value=`${updateTour.images[1]}`)
                label(for='tourPhoto2') choose new photo
                |    
                input.form__upload(type='file',accept='image/*',id='tourPhoto3',name='images3',value=`${updateTour.images[2]}`)
                label(for='tourPhoto3') choose new photo
              .form__group
                label.form__label(for='locations') Locations
                .form__location
                  input#tourlat.form__input--coordinate(type='text', placeholder='lat', name='tourlat',value=`${updateTour.locations[0].coordinates[1]}`)
                  input#tourlong.form__input--coordinate(type='text', placeholder='long', name='tourlong',value=`${updateTour.locations[0].coordinates[0]}`)
                  input#tourDescription.form__input--location(type='text', placeholder='description',name='tourDescription',value=`${updateTour.locations[0].description}`)
                  input#tourDay.form__input--location(type='text', placeholder='day', name='tourDay',value=`${updateTour.locations[0].day}`)
                .form__location
                  input#tourlat2.form__input--coordinate(type='text', placeholder='lat', name='tourlat2',value=`${updateTour.locations[1].coordinates[1]}`)
                  input#tourlong2.form__input--coordinate(type='text', placeholder='long', name='tourlong2',value=`${updateTour.locations[1].coordinates[0]}`)
                  input#tourDescription2.form__input--location(type='text', placeholder='description',name='tourDescription2',value=`${updateTour.locations[1].description}`)
                  input#tourDay2.form__input--location(type='text', placeholder='day', name='tourDay2',value=`${updateTour.locations[1].day}`)
                .form__location
                  input#tourlat3.form__input--coordinate(type='text', placeholder='lat', name='tourlat3',value=`${updateTour.locations[2].coordinates[1]}`)
                  input#tourlong3.form__input--coordinate(type='text', placeholder='long', name='tourlong3',value=`${updateTour.locations[2].coordinates[0]}`)
                  input#tourDescription3.form__input--location(type='text', placeholder='description',name='tourDescription3',value=`${updateTour.locations[2].description}`)
                  input#tourDay3.form__input--location(type='text', placeholder='day', name='tourDay3',value=`${updateTour.locations[2].day}`)
              .form__group
                label.form__label(for='startDate') Starting Date
                input#tourDate1.form__input(type='date', placeholder='date',  name='tourDate1',value=`${updateTour.startDates[0]}`)
                <br>
                input#tourDate2.form__input(type='date', placeholder='date',  name='tourDate2',value=`${updateTour.startDates[1]}`)
                <br>
                input#tourDate3.form__input(type='date', placeholder='dates',   name='tourDate3',value=`${updateTour.startDates[2]}`)
                
              .form__group
                label.form__label(for='guides') Guides
                input#tourGuide1.form__input(type='text', placeholder='guide name',  name='tourGuide1',value=`${updateTour.guides[0].id}`)
                <br>
                input#tourGuide2.form__input(type='text', placeholder='guide name',  name='tourGuide2',value=`${updateTour.guides[1].id}`)
                <br>
                input#tourGuide3.form__input(type='text', placeholder='guide name',   name='tourGuide3',value=`${updateTour.guides[2].id}`)
                
          .form__group
            button.btn.btn--green Update tour